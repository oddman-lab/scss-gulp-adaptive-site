; http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{go,py,rb,php}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{js,css}]
indent_style = space
indent_size = 2

[*.js]
trim_trailing_whitespace = true


[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore